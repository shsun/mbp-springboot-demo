<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.as.security.repository.RolePermissionMapRepository">

    <insert id="insert">
      INSERT INTO T_SECURITY_ROLE_PERMISSION_MAP (ROLE_ID , PERMISSION_ID)
      VALUES (#{roleId} , #{permissionId})
    </insert>

    <select id="findPermissionsByRoleId"
            resultMap="com.as.security.repository.PermissionRepository.PermissionResultMap">
        <include refid="com.as.security.repository.PermissionRepository.Base_SELECT"/>
        WHERE id in (
        select permission_id from T_SECURITY_ROLE_PERMISSION_MAP
        WHERE ROLE_ID = #{id}
        )
    </select>

    <select id="findPermissionsByRoleIds"
            resultMap="com.as.security.repository.PermissionRepository.PermissionResultMap">
        <include refid="com.as.security.repository.PermissionRepository.Base_SELECT"/>
        WHERE id in (
        select permission_id from T_SECURITY_ROLE_PERMISSION_MAP
        WHERE ROLE_ID IN
        <foreach item="item" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
        )
    </select>

    <delete id="deleteByRoleId">
        DELETE FROM T_SECURITY_ROLE_PERMISSION_MAP
        WHERE ROLE_ID = #{id}
    </delete>

    <select id="findRolesByPermissionId"
            resultMap="com.as.security.repository.RoleRepository.RoleResultMap">
        <include refid="com.as.security.repository.RoleRepository.Base_SELECT"/>
        WHERE id in (
        select role_id from T_SECURITY_ROLE_PERMISSION_MAP
        WHERE PERMISSION_ID = #{id}
        )
    </select>

    <delete id="deleteByPermissionId">
        DELETE FROM T_SECURITY_ROLE_PERMISSION_MAP
        WHERE PERMISSION_ID = #{id}
    </delete>

</mapper>